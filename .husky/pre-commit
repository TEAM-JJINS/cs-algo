#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo ""
echo "üîç Running Checkstyle on staged Java files..."

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.java$' || true)

echo "üìÅ Staged files: $STAGED_FILES"

if [ -z "$STAGED_FILES" ]; then
  echo "‚úÖ No Java files to check."
  exit 0
fi

JAR_PATH="./config/tools/checkstyle-10.23.0-all.jar"
CONFIG_PATH="./config/checkstyle/naver-checkstyle-rules.xml"
SUPPRESSION_PATH="./config/checkstyle/naver-checkstyle-suppressions.xml"
REPORT_PATH="./build/reports/checkstyle/precommit-report.xml"

# Check if JAR exists
if [ ! -f "$JAR_PATH" ]; then
  echo "‚ùå Checkstyle JAR not found at $JAR_PATH"
  exit 1
fi

mkdir -p "$(dirname "$REPORT_PATH")"

echo "üöÄ Running Checkstyle CLI..."
java -DsuppressionFile="$SUPPRESSION_PATH" \
     -jar "$JAR_PATH" \
     -c "$CONFIG_PATH" \
     -f xml \
     -o "$REPORT_PATH" \
     $STAGED_FILES

echo "‚ùó java exited with code $?"


echo "üìÑ Parsing report: $REPORT_PATH"
if grep -q "<error " "$REPORT_PATH"; then
  echo "‚ùå Checkstyle violations found. Please fix them before committing."
  exit 1
fi

echo "‚úÖ Checkstyle passed!"
